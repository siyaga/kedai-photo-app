<%- include('../templates/header')-%>
    <div class="album py-5 bg-light">
        <div class="container">
            <h1>Tambah Produk Foto</h1>
            <div class="card">
                <div class="card-body">
                    <form method="POST" action="/tambahfoto" class="mt-4" enctype="multipart/form-data">
                        <div class="mb-3">
                          <label for="judul" class="form-label">Judul Foto</label>
                          <input type="text" name="judul" class="form-control" id="judul" placeholder="" required />
                        </div>
                        <div class="mb-3">
                            <label for="harga" class="form-label">Harga Foto</label>
                            <input type="text" name="harga" class="form-control" id="judul" placeholder="" required />
                        </div>
                        <div class="mb-3">
                            <label for="deskripsi" class="form-label">Deskripsi Foto</label>
                            <textarea name="deskripsi" class="form-control" id="deskripsi" placeholder="" required></textarea>
                        </div>
                        <div class="mb-3">
                            <label for="gambar" class="form-label">Gambar</label>
                            <input type="file" accept="image/png, image/jpeg, image/jpg" class="form-control" id="gambar" name="gambar" required>
                        </div>
                        <button type="submit" class="btn btn-outline-primary">
                            Kirim
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-send-check" viewBox="0 0 16 16">
                                <path d="M15.964.686a.5.5 0 0 0-.65-.65L.767 5.855a.75.75 0 0 0-.124 1.329l4.995 3.178 1.531 2.406a.5.5 0 0 0 .844-.536L6.637 10.07l7.494-7.494-1.895 4.738a.5.5 0 1 0 .928.372l2.8-7Zm-2.54 1.183L5.93 9.363 1.591 6.602l11.833-4.733Z"/>
                                <path d="M16 12.5a3.5 3.5 0 1 1-7 0 3.5 3.5 0 0 1 7 0Zm-1.993-1.679a.5.5 0 0 0-.686.172l-1.17 1.95-.547-.547a.5.5 0 0 0-.708.708l.774.773a.75.75 0 0 0 1.174-.144l1.335-2.226a.5.5 0 0 0-.172-.686Z"/>
                              </svg>
                        </button>
                      </form>
                </div>
            </div>
        </div>
    </div>
<script src="javascripts/script.js"></script>
<%- include('../templates/header')-%>