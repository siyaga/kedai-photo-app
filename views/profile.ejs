<%- include('templates/header')-%>
<div class="container py-5 h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-md-12 col-xl-4">
  
          <div class="card" style="border-radius: 15px;">
            <div class="card-body text-center">
              <div class="mt-3 mb-4">
                <img src="././images/<%= users.image %> "
                  class="rounded-circle img-fluid" style="width: 100px;" />
              </div>
              <h4 class="mb-2"><%= users.username %> </h4>
              <h7 class="mb-2"><%= users.role %> </h7>
              <p class="text-muted mb-4"><%= users.name %>  <span class="mx-2">|</span> <%= users.email %> </p>
            
              <a href="/editprofile/<%= users.username %>" type="button" class="btn btn-primary btn-rounded btn-lg">
                Edit Profile 
              </a>
              <div class="d-flex justify-content-between text-center mt-5 mb-2">
                <% if (users.role=="penjual" || users.role=="pembeli" ) { %>
                 
              
                <div>
                  <%  
                  var reverse = (users.balance).toString().split("").reverse().join(""),
                    ribuan = reverse.match(/\d{1,3}/g);
                  ribuan = ribuan.join(".").split("").reverse().join(""); %> 
                  <p class="mb-2 h5">Rp.<%= ribuan %> </p>
                  <p class="text-muted mb-0">Wallets Balance</p>
                </div>
                <div class="px-3">
                  
                    
                    <% if (users.role=="penjual") { %>
                      <p class="mb-2 h5">
                      <%  
                      var reverse = (profitPenjual).toString().split("").reverse().join(""),
                        ribuan = reverse.match(/\d{1,3}/g);
                      ribuan = ribuan.join(".").split("").reverse().join(""); %> 
                      Rp.<%= ribuan %> 
                      
                    </p>
                    <p class="text-muted mb-0">Profit</p>
                      <% } %>
                      <% if (users.role=="pembeli") { %>
                        <p class="mb-2 h5">
                        <%  
                        var reverse = (pengeluaran).toString().split("").reverse().join(""),
                          ribuan = reverse.match(/\d{1,3}/g);
                        ribuan = ribuan.join(".").split("").reverse().join(""); %> 
                      Rp.<%= ribuan %> 
                    </p>
                    <p class="text-muted mb-0">Pengeluaran</p>
                        <% } %>
                  
                  
                </div>
                <div>
                  <p class="mb-2 h5">
                    <% if (users.role=="penjual") { %>
                    <%= transaksipenjualan.length %> 
                    <% } %>
                    <% if (users.role=="pembeli") { %>
                    <%= transaksipengeluaran.length %> 
                      <% } %>
                  </p>
                  <p class="text-muted mb-0">Total Transactions</p>
                </div>
                <% } %>
              </div>
            </div>
          </div>
  
        </div>
      </div>
    </div>
  
  <%- include('templates/footer')-%>